<% include partials/header %>

<div id="message_container" class="container">
   <div class="form-group row">
      <label for="sender" class="col-sm-2 col-form-label">Sender</label>
      <div class="col-sm-10">
         <input id="sender" class="form-control-plaintext"type="text" placeholder="From" value="<%=currentUser.username%>" readonly>
      </div>
   </div>
   <div class="form-group row">
      <label for="reciever" class="col-sm-2 col-form-label">To:</label>
      <div class="col-sm-10">
         <input id="reciever" class="form-control-plaintext"type="text">
      </div>
   </div>
   <div class="form-group row">
      <label for="message" class="col-sm-2 col-form-label">Message</label>
      <div class="col-sm-10">
         <input id="message" class="form-control" type="text" placeholder="message">
      </div>
   </div>
   <button class="btn btn-success" id="btn">Send</button>
</div>
<div id="chat">
   <div id="chat-window">
      <div id="display_message">
         <div id="feedback"></div>
      </div>
   </div>
</div>

<script type="text/javascript" src="/scripts/app.js"></script>
<% include partials/footer %>